<form action="/admin/users/create" method="post">
    <div class="row mt-5">
        <div class="col">
            <label for="firstName" class="form-label">Имя</label>
            <input
                    type="text"
                    id="firstName"
                    name="firstName"
                    class="form-control {{isValid errors 'firstName'}}"
                    value="{{user.firstName}}"
                    placeholder="Имя">
            <div class="invalid-feedback">
                {{isValidMessage errors 'firstName'}}
            </div>
        </div>
        <div class="col">
            <label for="lastName" class="form-label">Фамилия</label>
            <input
                    type="text"
                    id="lastName"
                    name="lastName"
                    class="form-control {{isValid errors 'lastName'}}"
                    value="{{user.lastName}}"
                    placeholder="Фамилия">
            <div class="invalid-feedback">
                {{isValidMessage errors 'lastName'}}
            </div>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col">
            <label for="email" class="form-label">Email</label>
            <input
                    type="email"
                    name="email"
                    id="email"
                    class="form-control {{isValid errors 'email'}}"
                    value="{{user.email}}"
                    placeholder="email@email.com">
            <div class="invalid-feedback">
                {{isValidMessage errors 'email'}}
            </div>
        </div>
        <div class="col">
            <label for="role" class="form-label">Права доступа</label>
            <select
                    id="role"
                    name="role"
                    class="form-select">
                {{#each roles }}
                    <option
                            {{#equals @root.selectedRoleIndex @index}}selected{{/equals}}
                            value="{{ this.[0]}}">
                        {{ this.[1]}}
                    </option>
                {{/each}}
            </select>
        </div>

    </div>
    <div class="row mt-5">
        <div class="col">
            <label for="password" class="form-label">Пароль</label>
            <input
                    type="password"
                    id="password"
                    name="password"
                    value="{{user.password}}"
                    class="form-control {{isValid errors 'password'}}">
            <div class="invalid-feedback">
                {{isValidMessage errors 'password'}}
            </div>
        </div>
        <div class="col">
            <label for="repeatPassword" class="form-label">Повторите пароль</label>
            <input
                    type="password"
                    id="repeatPassword"
                    name="repeatPassword"
                    value="{{user.repeatPassword}}"
                    class="form-control {{isValid errors 'repeatPassword'}}">
            <div class="invalid-feedback">
                {{isValidMessage errors 'repeatPassword'}}
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col">
            <input type="submit" value="Добавить" class="btn btn-primary">
        </div>
    </div>
</form>