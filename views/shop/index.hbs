<div class="products-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="sidebar">
                    <div class="widget">
                        <h3>Brands</h3>
                        <ul>
                            {{#each brands }}
                                <li>
                                    <a href="">
                                        {{this}}
                                    </a>
                                </li>
                            {{/each}}
                        </ul>
                    </div>
                    <div class="widget">
                        <h3>Price</h3>
                    </div>
                    <div class="widget">
                        <h3>Last added</h3>
                        <ul class="last-added">
                            {{#each lastProducts}}
                                <li class="align-space-between">
                                    <a href="#">
                                        <img src="/img/{{this.images.[0]}}" alt="">
                                    </a>
                                    <div>
                                        <a href="#">{{this.title}}</a>
                                        <p> {{this.price}} BYN</p>
                                    </div>
                                </li>
                            {{/each}}
                        </ul>
                    </div>
                    <div class="widget">
                        <h3>Os</h3>
                    </div>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="top-filter">
                            <div class="sort">
                                <div>
                                    <label for="show">Show: </label>
                                    <select class="form-select" id="show">
                                        <option selected>9</option>
                                        <option value="1">15</option>
                                        <option value="2">27</option>
                                    </select>
                                </div>
                                <div>
                                    <label for="sort">Sort&nbsp;by: </label>
                                    <select class="form-select" id="sort">
                                        <option selected>price</option>
                                        <option value="1">name</option>
                                        <option value="2">date</option>
                                    </select>
                                </div>
                            </div>
                            <div class="view-mode">
                                <span data-feather="grid" class="active"></span>
                                <span data-feather="list"></span>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="row">
                    {{#each products}}
                        <div class="col-lg-4">
                            <div class="single-product">
                                <div class="product-img">
                                    <a href="#">
                                        <img src="/img/{{this.images.[0]}}" alt="">
                                    </a>
                                    <div class="button-head">
                                        <div class="product-action">
                                            <a href="#" data-id="{{this.id}}" class="add-to-cart-short" title="Добавить в карзину">
                                                <span data-feather="shopping-cart"></span>
                                            </a>
                                            <a href="#" data-id="{{this.id}}" class="view" data-bs-toggle="modal" data-bs-target="#exampleModal" title="Быстрый просмотр">
                                                <span data-feather="eye"></span>
                                            </a>
                                            <a href="#" title="Добавить в изранное">
                                                <span data-feather="heart"></span>
                                            </a>
                                            <a href="#" title="Посмотреть детали">
                                                <span data-feather="trello"></span>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <div class="product-content">
                                    <h3>
                                        <a href="#">{{this.title}}</a>
                                    </h3>
                                    <span class="price">
                                            {{this.price}} BYN
                                        </span>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
          
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

<script>
    const links = document.body.querySelectorAll('a.add-to-cart-short');
    links.forEach(a=>{
        a.addEventListener('click', function (event){
            event.preventDefault()
            fetch('/shop/cart/add', {
                method: 'POST',
                credentials: 'same-origin',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(
                    {
                        id: this.dataset.id,
                        count: 1
                    })
            })
            .then(response => response.json())
            .then(res => {
                const ul = document.body.querySelector('.small-shopping-cart-content > ul')
                ul.innerHTML = '';
                let total = 0;
                res.forEach(item => {
                    total += parseFloat(item.product.price) * parseInt(item.count);
                    const li = document.createElement('li');
                    li.innerHTML = `<li class="align-space-between"> <div class="text-content"> <a href="#"> ${item.product.title} </a> <p>${item.count} x ${item.product.price} BYN</p> <button class="flat-button"> <span data-feather="x-circle"></span> </button> </div> <div> <a href="#" class="img-cont"> <img src="/img/${item.product.images[0]}" alt=""> </a> </div> </li>`;
                    ul.append(li);
                })
                document.body.querySelector('.cart-icon-count').textContent = res.length;
                document.body.querySelector('.cart-count').textContent = `${res.length} товара`;
                document.body.querySelector('.small-cart-total').textContent = `${total} BYN`;
            })
        });
    })


const view = document.body.querySelectorAll(".view");
view.forEach(btn=>{
    btn.addEventListener('click', function (event){
      event.preventDefault()
      fetch('/shop/view', {
                method: 'POST',
                credentials: 'same-origin',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(
                    {
                        id: this.dataset.id,
                    })
            })
            .then(response => response.json())
            .then(res => {
                const div = document.body.querySelector('.modal-body')
                div.innerHTML = `<div class='content'> <img src="/img/${res.images[0]}" alt="">  <h1> ${res.title} </h1>   </div>`;
                
                })
    })
})

   

</script>
